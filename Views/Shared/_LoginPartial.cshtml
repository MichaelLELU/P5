@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav d-flex align-items-center gap-3">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("IndexCarList", "Car")">
                <button type="submit" class="btn btn-link p-0 text-dark" style="text-decoration: none;">Se déconnecter</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-warning btn-sm" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-warning btn-sm" asp-area="Identity" asp-page="/Account/Register">S’inscrire</a>
        </li>
    }
</ul>