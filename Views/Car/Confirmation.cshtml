@{
    ViewData["Title"] = "Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5" role="status" aria-live="polite">
    <h1 style="font-style: italic; color: #7b5b43;">Merci !</h1>
    <p class="text-muted">Votre voiture a bien été publiée</p>

    <div class="mt-4">
        <a asp-action="IndexCarList" 
           class="btn btn-warning" 
           aria-label="Retour à la liste des voitures">
            Retour à l'accueil
        </a>
    </div>
</div>

<style>
    .btn:focus {
        outline: 2px solid #B99056;
        outline-offset: 2px;
        border-radius: 4px;
    }
</style>