@{
    ViewData["Title"] = "Voiture supprimée";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5" role="alert" aria-live="polite">
    <h2 style="font-style: italic; color: #7b5b43;">
        @ViewBag.Year @ViewBag.Brand @ViewBag.Model
    </h2>
    <p class="text-muted">a bien été supprimée</p>

    <div class="mt-4">
        <a asp-action="IndexCarList" 
           class="btn btn-warning" 
           aria-label="Retour à la liste des voitures">
            Retour à l'accueil
        </a>
    </div>
</div>

<style>
    .btn:focus {
        outline: 2px solid #B99056;
        outline-offset: 2px;
        border-radius: 4px;
    }
</style>