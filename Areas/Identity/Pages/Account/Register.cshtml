@page
@model RegisterModel
@{
    ViewData["Title"] = "Inscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="height: 90vh;">
    <div class="text-center" style="width: 300px;">
        <h1 class="mb-5" style="font-family: 'Georgia', serif; font-weight: bold; color: #4a2e1f;">
            Express Voitures
        </h1>

        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group text-start mb-3">
                <label asp-for="Input.Email">Adresse email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group text-start mb-3">
                <label asp-for="Input.Password">Mot de passe</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group text-start mb-4">
                <label asp-for="Input.ConfirmPassword">Confirmation du mot de passe</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-warning w-100 text-white fw-semibold custom-hover">
                S’inscrire
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}